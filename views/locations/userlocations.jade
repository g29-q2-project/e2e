                    input#location_name(type='text', name="location_name")
                    | Location Name
                  .input-field.col.s12
                    input#adress(type='text', name="address")
                    | Location Name
                  .row
                    .input-field.col.s12
                      button.btn.cyan.waves-effect.waves-light.right(type='submit', name='submit') Save Location!
                      
