extends ../layout
block content
	#main
		// START WRAPPER
		.wrapper
			include ../../public/includes/left_sidebar.jade
		// START CONTENT
		section#content
			// start container
			.container
				.row
					.col.s12.m12.l6
						.card-panel.card-move-up.teal.waves-effect.waves-block.waves-light
							h4.margin.white-text Edit Your #{location.name} Location
							.row
								form.col(class='s12', method='post' action="/locations/edit/#{location.id}")
									.input-field.col.s12
										input#location_name(type='text', name="location_name", value=location.name)
										| Location Name
									.input-field.col.s12
										input#searchBoxField(type='text', name="address" value=location.formatted_address)
										| Address
									.row
										.input-field.col.s12
											button.btn.cyan.waves-effect.waves-light.right(type='submit') Edit Location!
					


			// FOOTER
			include ../../public/includes/footer.jade
			// JS Scripts
			include ../../public/includes/scripts.jade
			script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyB9xEAcDm6FwY9iDrdBRVsXhowU9FbDIao')  
