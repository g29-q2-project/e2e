extends ../layout
block content
	#main
		// START WRAPPER
		.wrapper
			include ../../public/includes/left_sidebar.jade
		// START CONTENT
		section#content
			// start container
			.container
				.row
					each location in locations

						// map-card
						.col.s12.m12.l4
							.map-card
								.card
									.card-image.waves-effect.waves-block.waves-light
										.map-canvas(data-lat='#{location.lat}', data-lng='#{location.lng}', id='map-canvas-#{location.id}')
									.card-content
										a.btn-floating.activator.btn-move-up.waves-effect.waves-light.light-green.right
											i.mdi-action-info
										a.btn-floating.btn-move-up.waves-effect.waves-light.cyan.right(href="/locations/edit/#{location.id}")
											i.mdi-image-edit
										a.btn-floating.btn-move-up.waves-effect.waves-light.red.accent-2.right
											i.mdi-action-favorite
										h4.card-title.grey-text.text-darken-4
											a.grey-text.text-darken-4(href='#')= location.name
										p.blog-post-content= location.formatted_address
									.card-reveal
										span.card-title.grey-text.text-darken-4= location.name 
											i.mdi-navigation-close.right
										p
											| Here is some more information about this company. As a creative studio we believe no client is too big nor too small to work with us to obtain good advantage.By combining the creativity of artists with the precision of engineers we develop custom solutions that achieve results.Some more information about this company.
										p
											i.mdi-action-perm-identity.cyan-text.text-darken-2
											|  Manager Name
										p
											i.mdi-communication-business.cyan-text.text-darken-2
											|  125, ABC Street, New Yourk, USA
										p
											i.mdi-action-perm-phone-msg.cyan-text.text-darken-2
											|  +1 (612) 222 8989
										p
											i.mdi-communication-email.cyan-text.text-darken-2
											|  support@geekslabs.com



			include ../../public/includes/footer.jade

			// end container
			// END CONTENT
			// ////////////////////////////////////////////////////////////////////////////

			//
				================================================
				Scripts
				================================================
			// jQuery Library
			//- script(type='text/javascript', src='/js/plugins/jquery-1.11.2.min.js')
			// materialize js
			script(type='text/javascript', src='/js/materialize.js')
			// prism
			script(type='text/javascript', src='/js/plugins/prism/prism.js')
			// scrollbar
			script(type='text/javascript', src='/js/plugins/perfect-scrollbar/perfect-scrollbar.min.js')
			// chartist
			script(type='text/javascript', src='/js/plugins/chartist-js/chartist.min.js')
			// chartjs
			script(type='text/javascript', src='/js/plugins/chartjs/chart.min.js')
			script(type='text/javascript', src='/js/plugins/chartjs/chart-script.js')
			// interactivity
			script(type='text/javascript', src='/js/interactivity.js')
			// location logic
			script(type='text/javascript', src='/js/locations/locations_logic.js')
			// sparkline
			script(type='text/javascript', src='/js/plugins/sparkline/jquery.sparkline.min.js')
			script(type='text/javascript', src='/js/plugins/sparkline/sparkline-script.js')
			// google map api
			script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyB9xEAcDm6FwY9iDrdBRVsXhowU9FbDIao&callback=initMap')    
			// google map
			script(type='text/javascript', src='/js/plugins/google-map/google-map-script.js')
