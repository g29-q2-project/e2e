extends ../layout
block content
	#main
		// START WRAPPER
		.wrapper
			include ../../public/includes/left_sidebar.jade
		section#content
			// start container
			.container
				// card widgets start
				#card-widgets
					.row
						each trip in trips
							.col.s12.m6.l4
								#flight-card.card
								
									case trip.transit_method_id
										when '303'
											.card-header.black
												.card-title
													h4.flight-card-title= trip.trip_name
													p.flight-card-date= trip.created_at
											.card-content-bg.white-text
												.card-content
													a.btn-floating.btn-move-up.waves-effect.waves-light.darken-2.right
														i.mdi-content-add.activator

													.row.flight-state-wrapper
														.col.s5.m5.l5.center-align
															.flight-state.center-align
																h5.margin= trip.origin_name
																p.small
														.col.s2.m2.l2.center-align
															case trip.transit_method_id
																when '300'
																	i.mdi-maps-directions-car.large
																when '303'
																	i.mdi-maps-local-taxi.large

														.col.s5.m5.l5.center-align
															.flight-state
																h5.margin= trip.destination_name
																p.small
													.row
														.col.s6.m6.l6.center-align
															.flight-info
																p.small
																	span.grey-text.text-lighten-4 Origin:
																p.small
																	span.grey-text.text-lighten-4= trip.origin_formatted_address

														.col.s6.m6.l6.center-align.flight-state-two
															.flight-info
																p.small
																	span.grey-text.text-lighten-4 Destination:
																p.small
																	span.grey-text.text-lighten-4= trip.destination_formatted_address												
												
												
											
										when '300'
											.card-header.light-green
												.card-title
													h4.flight-card-title= trip.trip_name
													p.flight-card-date= trip.created_at
											.card-content-bg.white-text
												.card-content
													a.btn-floating.btn-move-up.waves-effect.waves-light.darken-2.right
														i.mdi-content-add.activator
													.row.flight-state-wrapper
														.col.s5.m5.l5.center-align
															.flight-state.center-align
																h5.margin= trip.origin_name
																p.small
														.col.s2.m2.l2.center-align
															case trip.transit_method_id
																when '300'
																	i.mdi-maps-directions-car.large
																when '303'
																	i.mdi-maps-local-taxi.large

														.col.s5.m5.l5.center-align
															.flight-state
																h5.margin= trip.destination_name
																p.small
													.row
														.col.s6.m6.l6.center-align
															.flight-info
																p.small
																	span.grey-text.text-lighten-4 Origin:
																p.small
																	span.grey-text.text-lighten-4= trip.origin_formatted_address

														.col.s6.m6.l6.center-align.flight-state-two
															.flight-info
																p.small
																	span.grey-text.text-lighten-4 Destination:
																p.small
																	span.grey-text.text-lighten-4= trip.destination_formatted_address

							// Floating Action Button
							// end container
							// END CONTENT
							// ////////////////////////////////////////////////////////////////////////////
							// START RIGHT SIDEBAR NAV
							aside#right-sidebar-nav
								ul#chat-out.side-nav.rightside-navigation
									li.li-hover
										a.chat-close-collapse.right(href='#', data-activates='chat-out')
											i.mdi-navigation-close
										#right-search.row
											form.col.s12
												.input-field
													i.mdi-action-search.prefix
													input#icon_prefix.validate(type='text')
													label(for='icon_prefix') Search
									li.li-hover
										ul.chat-collapsible(data-collapsible='expandable')
											li
												.collapsible-header.teal.white-text.active
													i.mdi-social-whatshot
													| Recent Activity
												.collapsible-body.recent-activity
													.recent-activity-list.chat-out-list.row
														.col.s3.recent-activity-list-icon
															i.mdi-action-add-shopping-cart
														.col.s9.recent-activity-list-text
															a(href='#') just now
															p Jim Doe Purchased new equipments for zonal office.
													.recent-activity-list.chat-out-list.row
														.col.s3.recent-activity-list-icon
															i.mdi-device-airplanemode-on
														.col.s9.recent-activity-list-text
															a(href='#') Yesterday
															p Your Next flight for USA will be on 15th August 2015.
													.recent-activity-list.chat-out-list.row
														.col.s3.recent-activity-list-icon
															i.mdi-action-settings-voice
														.col.s9.recent-activity-list-text
