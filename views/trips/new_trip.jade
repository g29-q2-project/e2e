extends ../layout
block content
	#main
		// START WRAPPER
		.wrapper
			include ../../public/includes/left_sidebar.jade
		section#content
			// start container
			.container
				.row.center-align
					.col.s12.m6.l6
						.card
							.card-move-up.teal.waves-effect.waves-block.waves-light
								.move-up
									h5.margin.white-text Start Location
									input#origin-input.controls(type='text', name='trip_name', placeholder='starting location for your trip')
					.col.s12.m6.l6
						.card
							.card-move-up.teal.waves-effect.waves-block.waves-light
								.move-up
									h5.margin.white-text Destination Location
									input#destination-input.controls(type='text', name='trip_name', placeholder='starting location for your trip')
									.input-field.col.s12

					.input-field.col.s12.m6.l6
						select#mode
							option(value='', disabled='', selected='') Select Your Mode
							option(value='TRANSIT', id='changemode-transit') Transit
							option(value='DRIVING', id='changemode-driving') Driving
							option(value='BICYCLING', id='changemode-bicycling') Bicycling
							option(value='WALKING', id='changemode-walking') Walking
						label 
					.col.s6.m6.l6.valign-wrapper
						a#getDirections.btn-floating.valign.btn-large.waves-effect.waves-light.cyan
							i.mdi-maps-directions
				.row			
					#map(style="display:none")
					#jon_map
					#floating-panel
						b Mode of Travel:
						select#mode
							option(value='TRANSIT') Transit
							option(value='BICYCLING') Bicycling
							option(value='DRIVING') Driving
							option(value='WALKING') Walking
						button#showTraffic traffic
						button#showTransit transit
						button#showBike bike
			// FOOTER
			include ../../public/includes/footer.jade
				//
					================================================
					Scripts
					================================================
				// jQuery Library
				script(type='text/javascript', src='/js/plugins/jquery-1.11.2.min.js')
				// materialize js
				script(type='text/javascript', src='/js/materialize.js')
				// chartist
				script(type='text/javascript', src='/js/plugins/chartist-js/chartist.min.js')
				// chartjs
				script(type='text/javascript', src='/js/plugins/chartjs/chart.min.js')
				script(type='text/javascript', src='/js/plugins/chartjs/chart-script.js')
				// sparkline
				script(type='text/javascript', src='/js/plugins/sparkline/jquery.sparkline.min.js')
				script(type='text/javascript', src='/js/plugins/sparkline/sparkline-script.js')
				// google map api
				//- script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAAZnaZBXLqNBRXjd-82km_NO7GUItyKek')
				script(type='text/javascript', src='/js/mapsapi.js')
				//- script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyB9xEAcDm6FwY9iDrdBRVsXhowU9FbDIao')
				// jvectormap
				script(type='text/javascript', src='/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js')
				script(type='text/javascript', src='/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js')
